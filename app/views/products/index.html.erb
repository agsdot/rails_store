<p><%= link_to 'New Product', new_product_path %>

</p>
<table>
<% @products.each do |product| %>
  <div class='listings'>
    <p><%= link_to image_tag( product.image_url ), product %></p>

    <p class="productname"><%= product.name %></p>
    
    <p class="split-para"><%= product.price %>
    <% if product.in_cart == true %>
    <span>In Cart</span></p>
    <% else %>
    <span><%= link_to 'Add to Cart', product, method: :post %></span></p>
    <% end %>

