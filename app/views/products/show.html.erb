<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p class="description">
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Image URL:</b>
  <img src="<%= @product.image_url %>" />
</p>

<b>Reviews:</b>
<ol>
<% @reviews.each do |review| %>
  <li><%= review.body %> <%= review.rating %></li>
<% end %>
</ol>
<p><b>Add Review: </b><a href="/reviews/new?product_id=<%= @product.id %>">Create a new review </a>
</p>

<p>
  <b>In Cart:</b>
  <%= @product.in_cart %>
</p>

<p><%= render 'addcart' %></p>

<p><%= render 'cart' %></p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
