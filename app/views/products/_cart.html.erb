<div class="cart">
<h2>My Cart</h2>
<table>
<% @products_in_cart.each do |product| %>
<tr>
 <td><%= product.name %> </td>
 <td><%= number_to_currency(product.price) %> </td>
</tr>
 <% end %>
<tr>
 <td></td>
 <td>----------</td>
</tr> 
<tr>
 <td>Total price: </td>
 <td><%= number_to_currency(@total_price) %> </td>
</tr> 
 </table>	
</div>
